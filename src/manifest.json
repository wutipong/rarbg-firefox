{
  "manifest_version": 2,
  "name": "custom rarbg extension",
  "version": "2021.5.1",
  "description": "custom rarbg extension.",
  "browser_specific_settings": {
    "gecko": {
      "id": "{85d27e21-9802-433d-8420-02b2f1d7e7fb}"
    }
  },
  "icons": {
    "16": "icon.svg",
    "32": "icon.svg",
    "48": "icon.svg",
    "128": "icon.svg"
  },
  "options_ui": {
    "page": "settings.html",
    "browser_style": true,
    "open_in_tab": true
  },
  "page_action": {
    "default_icon": {
      "16": "icon.svg",
      "32": "icon.svg",
      "48": "icon.svg",
      "128": "icon.svg"
    },
    "show_matches": [
      "*://rarbgenter.org/torrents.php*",
      "*://rarbgenter.org/torrent/*"
    ]
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://rarbgenter.org/torrents.php*"
      ],
      "all_frames": true,
      "js": [
        "torrents.js"
      ],
      "run_at": "document_start"
    },
    {
      "matches": [
        "*://rarbgenter.org/torrent/*"
      ],
      "all_frames": true,
      "js": [
        "torrent.js"
      ],
      "run_at": "document_start"
    }
  ],
  "permissions": [
    "*://rarbgenter.org/*",
    "storage"
  ]
}